<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.timetable.mapper.StudentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.app.timetable.entity.Student">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="user_id" property="userId" />
        <result column="truancy_num" property="truancyNum" />
        <result column="leave_num" property="leaveNum" />
        <result column="score" property="score" />
    </resultMap>

    <select id="selectByUserId" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT * FROM student WHERE user_id = #{userId}
    </select>
</mapper>
